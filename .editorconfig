root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.sh]
insert_final_newline = true
shell_variant      = auto
binary_next_line   = true
switch_case_indent = true
keep_padding       = true
function_next_line = true

[*.lua]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
insert_final_newline = false
